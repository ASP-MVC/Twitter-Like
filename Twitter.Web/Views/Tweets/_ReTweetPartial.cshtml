@model Twitter.Web.Models.BindingModels.ReTweetBindingModel
<div class="row">
    <div class="modal-body">
        @using (Html.BeginForm("ReTweet", "Tweets", FormMethod.Post, new { @class = "form-group" }))
        {
            @Html.AntiForgeryToken()
            @Html.EditorFor(m => m.Content)

            <input type="submit" value="ReTweet" class="btn btn-default"/>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}